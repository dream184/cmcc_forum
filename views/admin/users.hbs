<section class="users-section col-12 col-md-9">
  <div class="users-container">
    <div class="users-title d-flex justify-content-between my-3">
      <h3 class="font-weitht-bold">管理所有使用者權限</h3>
    </div>
    {{>message}}
    <table class="users-table bg-white w-100">
      <thead class="thead-dark bg-info bg-gradient w-100">
        <tr class="w-100 text-white">
          <th scope="col" class="text-nowrap p-1" style="width: 20%;">使用者</th>
          <th scope="col" class="text-nowrap p-1" style="width: 20%;">暱稱</th>
          <th scope="col" class="text-nowrap p-1" style="width: 20%;">Email</th>
          <th scope="col" class="text-nowrap p-1" style="width: 20%;">目前權限</th>
          <th scope="col" class="text-nowrap p-1" style="width: 20%;">*</th>
        </tr>
      </thead>

      <tbody>
        {{#each users}}
        <tr>
          <td class="col p-1" style="width: 20%;">
            {{this.name}}
          </th>
          <td class="col p-1" style="width: 20%;">
            {{this.nickName}}
          </td> 
          <th scope="col" class="col text p-1" style="width: 20%; word-wrap:break-word; word-break:break-all;">
            {{this.email}}
          </td>      
          <td class="col p-1" style="width: 20%;">
            {{this.Authority.name}}
          </td>
          <td class="col p-1" style="width: 20%;">
            <a href="/admin/users/{{this.id}}/edit" class="btn btn-primary p-1">編輯</a>
          </td>
        </tr>
        {{/each}}
      </tbody> 
    </table>
  </div>
  {{#if totalPage}}
  <div class="paginator-container">
    <nav aria-label="Page navigation example" class="mx-auto my-2">
      <ul class="pagination d-flex justify-content-center">
        <li class="page-item">
          <a class="page-link" href="/admin/users?page={{prev}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{#each totalPage}}
        {{#if (equal this ../page)}}
        <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
        {{else}}
        <li class="page-item"><a class="page-link" href="/admin/users?page={{this}}">{{this}}</a></li>
        {{/if}}
        {{/each}}
        <li class="page-item"><a class="page-link" href="/admin/users?page={{next}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
  {{/if}}
</section>


  
